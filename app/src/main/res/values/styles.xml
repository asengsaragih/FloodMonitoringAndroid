<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPaletteBlue</item>
        <item name="colorPrimaryDark">@color/colorPalettePurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorBackground">@color/colorTransparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="TransparentDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/radius_dialog_history</item>
    </style>

</resources>
